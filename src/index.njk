                </div>
                {# Brow #}
                {% set browColor = "white" %}
                <div class="relative flex gap:0 align-items:center mb:32 sm:mb:40 md:mb:48">
                    <div class="relative z:2 h:28 w:14 flex flex:col align-items:center justify-content:center">
                        <div class="relative w:100p h:100p" style="background: linear-gradient(315deg, rgba(var(--{{browColor}}), 1) 50%, rgba(var(--{{browColor}}), 0) 50%);"></div>
                        <div class="relative w:100p h:100p" style="background: linear-gradient(225deg, rgba(var(--{{browColor}}), 1) 50%, rgba(var(--{{browColor}}), 0) 50%);"></div>
                        <div class="absolute w:2 h:2 ml:14 bg:ink-3 transform rotate:45"></div>
                    </div>
                    <div class="relative h:28 flex align-items:center justify-content:center semibold font:xs color:ink-3 px:10 pt:8 pb:6 uppercase bg:{{browColor}}" style="letter-spacing:0.2em;">
                        <h2 class="flex align-items:center gap:4 mt:n1">
                            <span class="italic font:editorial mb:n2" style="font-size:0.86em;">Sincerely</span> Wisconsin
                        </h2>
                    </div>
                    <div class="relative z:2 h:28 w:14 flex flex:col align-items:center justify-content:center">
                        <div class="relative w:100p h:100p" style="background: linear-gradient(-315deg, rgba(var(--{{browColor}}), 1) 50%, rgba(var(--{{browColor}}), 0) 50%);"></div>
                        <div class="relative w:100p h:100p" style="background: linear-gradient(-225deg, rgba(var(--{{browColor}}), 1) 50%, rgba(var(--{{browColor}}), 0) 50%);"></div>
                        <div class="absolute w:2 h:2 mr:14 bg:ink-3 transform rotate:45"></div>
                    </div>
                    <img src="/assets/images/home/karner-blue.webp" alt="" width="32" height="34" class="absolute left:16 top:n32 transform rotate:12 z:3">
                </div>
            </div>
            {# Sub Nav #}
            <div class="relative w:100p sm:w:plus96 md:w:100p md:max-w:1152 flex align-items:center justify-content:center">
