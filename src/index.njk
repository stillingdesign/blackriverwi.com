{% import "components/_icons.njk" as icons %}

<main data-page="home">

    {# Hero #}
    <div data-hero class="relative overflow:hidden">

        {# Content #}
        <section data-hero-upper class="section pt:128 sm:pt:144 md:pt:160">
            {# Silhoutte #}
            <div class="absolute top:0 left:0 flex justify-content:center w:100p h:100p overflow:hidden">
                <img src="/assets/images/home/pine-shadows-alt.webp" width="1000" height="1000" class="absolute top:n128 md:top:n224 mr:320 sm:mr:576 md:mr:320 lg:mr:576 w:200p md:w:150p max-w:none h:auto opacity:20 blend:multiply breeze" alt="">
                <div class="absolute bottom:0 left:0 w:100p h:256 bg:fade-down"></div>
            </div>
            {# Content #}
            <div data-hero-content class="container flex flex:col-reverse align-items:center mb:56 sm:mb:72 md:mb:112">
                {# Headline #}
                <div class="relative w:100p sm:max-w:672 md:max-w:896 lg:max-w:none">
                    <h1 class="relative font:editorial light tracking:tight font:13vw sm:font:12xl lg:font:88 leading:120 text:center w:100p">
                        Where rivers meet the forest's grace, Black River Falls, <span class="space:nowrap">a peaceful place.</span>
                    </h1>
                    <img src="/assets/images/home/pileated.webp" alt="" width="112" height="105" class="hidden sm:block absolute w:96 md:w:112 h:auto top:96 md:top:n28 right:4 md:right:n2 lg:right:n48 mr:n4 transform rotate:12">
