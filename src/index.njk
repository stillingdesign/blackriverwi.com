    {# Activities#}
    <section class="section pt:36 sm:pt:72">
        <ul class="container grid sm:grid-cols:2 md:grid-cols:3 gap:18">
            {% macro cardActivity(classes, img, width, height, brow, head, desc, cta) %}
                <li class="relative {{ classes }} activity-card-outer">
                    <a href="#" class="relative w:100p h:100p flex flex:col align-items:center justify-content:center bg:sheet-5 overflow:hidden radius:xl activity-card">
                        {# Image #}
                        <img src="/assets/images/home/{{ img }}.webp" width="{{ width }}" height="{{ height }}" class="absolute object:cover w:100p max-w:none h:100p" alt="">
                        {# Content #}
                        <div class="relative flex flex:col align-items:start justify-content:between w:100p h:100p">
                            <div class="absolute bg:black opacity:30 w:100p h:100p activity-card-mask"></div>
                            <div class="absolute bg:fade-down-i opacity:50 w:100p h:100p"></div>
                            <div class="absolute bottom:0 bg:fade-down-i opacity:50 w:100p h:224"></div>
                            <div class="absolute bottom:0 bg:fade-down-i opacity:50 w:100p h:128"></div>
                            {# Brow #}
                            <h3 class="relative flex align-items:center font:xs tracking:loose semibold bg:sheet-1 radius:xs h:24 mx:28 mt:28 px:8 shadow:xs leading:100">
                                {{ brow | safe }}
                            </h3>
                            <div class="relative w:100p color:white px:28">
                                <div class="flex align-items:end justify-content:between">
                                    <h4 class="font:3xl lg:font:4xl font:editorial leading:130 balance max-w:384">
                                        {{ head | safe }}
                                    </h4>
                                    {% if desc %}
                                        <p class="medium mb:4 balance max-w:296 tracking:normal opacity:80 hidden lg:block">
                                            {{ desc | safe }}
                                        </p>
                                    {% endif %}
                                </div>
                                <div class="w:100p h:1 bg:sheet-1 opacity:30 mt:14 mb:18"></div>
                                <div class="flex align-items:center justify-content:between mb:18">
                                    <p class="medium tracking:normal leading:100 mt:n1">
                                        {{ cta | safe }}
                                    </p>
                                    {{ icons.chevRight('w:16')}}
                                </div>
                            </div>
                        </div>
                    </a>
                </li>
            {% endmacro %}
            {# Card #}
            {{ cardActivity(
                classes='ratio:1-1 md:ratio:unset md:col:2',
                img='kayak',
                width='744',
                height='372',
                brow='Get on the water',
                head='Explore an endless number of lakes, rivers, and streams',
                desc='Boat, kayak, fish, float, or beach, Black River Falls has pristine, crowd-free water for you.',
                cta='Choose your waterway'
            )}}
            {{ cardActivity(
                classes='flex ratio:1-1',
                img='blueberry',
                width='372',
                height='372',
                brow='Taste Wisconsin',
                head='Pictureque orchards, bogs, and wineries',
                desc=false,
                cta='Pick your palette'
            )}}
            {{ cardActivity(
                classes='flex ratio:1-1',
                img='reading',
                width='372',
                height='372',
                brow='Relax &amp; reset',
                head='Simply enjoy nature in a cozy, stress-free space',
                desc=false,
                cta='Plan your stay'
            )}}
            {{ cardActivity(
                classes='ratio:1-1 md:ratio:unset md:col:2',
                img='hike-rect',
                width='744',
                height='372',
                brow='Take a new trail',
                head='Traverse hundreds of miles of hiking, biking, and ATV trails',
                desc='Experience trails with unique geography and wildlife, like no other in the state.',
                cta='Select your route'
            )}}
        </ul>
    </section>

