                <ul data-hero-content class="relative w:100p flex flex:col sm:flex:row align-items:center">
                    {% macro heroSubnav(link, label, icon, classesOuter, classesInner) %}
                        <li class="relative w:100p">
                            <a href="{{ link }}" class="hero-subnav-item relative flex justify-content:between align-items:center w:100p py:12 px:24 sm:px:0 border:ink-3 border-opacity:10 {{ classesOuter }}">
                                <div class="absolute top:4 left:4 w:minus8 h:minus8 bg:primary-rg border:1 border:primary-rg bg-opacity:20 border-opacity:50 radius:xs"></div>
                                <div class=" relative {{ classesInner }}">
                                    {{ label }}
                                </div>
                                {{ icon }}
